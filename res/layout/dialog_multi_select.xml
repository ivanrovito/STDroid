<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="vertical">

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal">

		<ImageView android:id="@+id/user_image"
			android:layout_width="48dip" android:layout_height="48dip"
			android:layout_margin="5dip" android:src="@drawable/icon" />

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:orientation="vertical">
			<TextView android:id="@+id/info1" android:text="info1"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="18sp" android:layout_marginBottom="5px"/>

			
		
			
		<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:layout_marginLeft="20px"
		android:layout_marginBottom="20px"
		android:gravity="center">
		
		<ImageView android:id="@+id/favorite" 
		android:src="@drawable/multiselectdialog_staroff" android:layout_height="wrap_content" 
		android:layout_width="wrap_content"></ImageView>
		 
		 <ImageButton android:id="@+id/dialog_multiselect_get_reply" 
		 android:layout_width="32dip" 
		 android:layout_height="32dip" 
		 android:layout_marginLeft="10px"
		 android:background="@drawable/multiselect_dialog_reply" 
		 />
		 
	     <ImageButton android:id="@+id/dialog_multiselect_close_children" 
		 android:layout_width="32dip" 
		 android:layout_height="32dip" 
		 android:layout_marginLeft="10px"
		 android:background="@drawable/multiselectdialog_close" 
		 />

		 
	</LinearLayout>
</LinearLayout>
	</LinearLayout>



	<TextView android:id="@+id/info2" android:text="update_time"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="5dip" android:autoLink="all" />


	<TextView android:layout_height="5dip" android:layout_width="fill_parent"
		android:background="#ff69b4" android:text="textView" />

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:padding="5dip" android:background="#f5deb3">

		<ImageButton android:id="@+id/retweetButton"
			android:src="@drawable/multiselectdialog_retweet" android:scaleType="fitXY"
			android:layout_height="40dip" android:layout_width="40dip"/>

		<ImageButton android:id="@+id/replyButton"
			android:scaleType="fitXY" android:src="@drawable/multiselectdialog_reply" android:layout_height="40dip" android:layout_width="40dip"/>

		<ImageButton android:id="@+id/profileButton"
			android:scaleType="fitXY" android:src="@drawable/multiselectdialog_userinfo" android:layout_height="40dip" android:layout_width="40dip"/>

		<ImageButton android:id="@+id/deleteButton"
			android:scaleType="fitXY" android:layout_height="40dip" android:layout_width="40dip"/>


		<ImageButton android:id="@+id/emailButton"
			android:scaleType="fitXY" android:src="@drawable/multiselectdialog_email" android:layout_height="40dip" android:layout_width="40dip"/>

		<ImageButton android:id="@+id/translateButton"
			android:scaleType="fitXY" android:src="@drawable/multiselectdialog_translate" android:layout_height="40dip" android:layout_width="40dip"/>

		<ImageButton android:id="@+id/closeButton"
			android:src="@drawable/multiselectdialog_close" android:scaleType="fitXY"
			android:layout_height="40dip" android:layout_width="40dip"/>

	</LinearLayout>


</LinearLayout>
