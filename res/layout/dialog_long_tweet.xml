<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/ScrollView01"
	android:layout_width="300dip" android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dip"
    android:layout_height="fill_parent"
    android:gravity="center">
    
    <EditText
    	android:id="@+id/originalmsg"
    	android:layout_width="fill_parent"
    	android:lines="2"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:editable="false"
    	android:textColor="@color/white_gray"/>
    	
    <Button
    	android:id="@+id/twitlonger"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="10dip"
    	android:layout_gravity="right"
    	android:text="TwitLonger"/>
    	
    <EditText
    	android:id="@+id/respondmsg"
    	android:layout_width="fill_parent"
    	android:layout_height="180dip"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:gravity="top"
    	android:lines="8"
    	android:textColor="@color/white_gray"/>
    	
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip"
		android:background="#cccccc"
		android:weightSum="2"
		android:orientation="horizontal">
		
		<Button
			android:id="@+id/twitlongerok"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/ok"/>
			
		<Button
			android:id="@+id/twitlongercancel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/cancel"/>
			
	</LinearLayout>

</LinearLayout>
</ScrollView>
