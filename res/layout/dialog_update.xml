<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01"
	android:layout_width="300dip" android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="vertical">


		<!--  <TextView android:id="@+id/upload_message" android:enabled="false"
			android:text="@string/dialog_update_imagesize"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:textSize="15px"/> -->
		
		<TextView android:id="@+id/file_path" android:enabled="false"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:textSize="17px"/>


		<EditText android:id="@+id/update_text" android:layout_width="fill_parent"
			android:layout_height="180dip" android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip" android:text="" android:gravity="top"
			android:lines="10" />

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:orientation="horizontal"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip">

			<ImageButton android:id="@+id/translateButton"
				android:layout_width="40dip" android:layout_height="40dip"
				android:scaleType="fitXY" android:src="@drawable/multiselectdialog_translate" />

			<!-- <ImageButton android:id="@+id/uploadImageButton"
				android:layout_width="40dip" android:layout_height="40dip"
				android:scaleType="fitXY" android:src="@drawable/updatedialog_upload_image" />-->
				
			<ImageButton android:id="@+id/shortenUrlButton"
				android:layout_width="40dip" android:layout_height="40dip"
				android:scaleType="fitXY" android:src="@drawable/updatedialog_shorten_url_image" />
				
			<ImageButton android:id="@+id/longTweetButton"
			    android:layout_width="40dip" android:layout_height="40dip"
			    android:scaleType="fitXY" android:src="@drawable/updatedialog_long_tweet"/>


            <TextView android:id="@+id/counterText" android:text="count"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/white_gray" android:textStyle="bold"
				android:textSize="20px" android:layout_marginLeft="50px" />

		</LinearLayout>

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="10dip"
			android:padding="5dip" android:background="#cccccc">
			
			<Button android:id="@+id/cancelButton" android:layout_width="100dip"
				android:layout_height="wrap_content" android:text="Cancel"
				android:layout_alignParentRight="true" />
			<Button android:id="@+id/okButton" android:layout_width="100dip"
				android:layout_height="wrap_content" android:text="Confirm"
				android:layout_alignParentLeft="true" />
			
				
			
		</RelativeLayout>

	</LinearLayout>
</ScrollView>